
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Welcome</title>
    <script src="~/Content/js/jquery-1.8.3.js"></script>
    <script src="~/Content/js/jquery-ui.min.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/fwslider.js" type="text/javascript"></script>
    <link href="~/Content/css/superfish.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fwslider.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/superfish.js"></script>
    <script type="text/javascript">
        $(function () {
            var zIndexNumber = 1000;
            $('div').each(function () {
                $(this).css('zIndex', zIndexNumber);
                zIndexNumber -= 10;
            });
        });
        $(document).ready(function () {
            $('#menu').superfish();
        });
    </script>
    <style type="text/css">
                .clsLoginUnderline {
            border-bottom: 1px solid green;
        }
                .clsBodyBackGround{
                    background-color:#efeeee;
                }
                .clsMenuBackGround{
                    background-color:green;
                }
    </style>
</head>
<body class="clsBodyBackGround">
    <header>
        <div class="header-top">
            <table cellspacing="3" cellpadding="3" style="float:right;">
                <tr>
                    <td><span style="float:right;font-size:medium;color:black;"><b><a class="clsLoginUnderline" target="_blank" href="/User/Index">User Login</a></b></span></td>
                    <td><span style="float:right;font-size:medium;color:black;"><b><a class="clsLoginUnderline" target="_blank" href="/Admin/Index">Admin Login</a></b></span></td>
                </tr>
            </table>
            @{
                string adminName = string.Empty;
                if (Session["UpdatedAdminName"] != null)
                {
                    adminName = Convert.ToString(Session["UpdatedAdminName"]);
                }
            }
            <div class="container">
                <table cellspacing="5" cellpadding="0">
                    <tr>
                        <td></td>
                        <td><a href="/Home/Index"><img src="~/images/PartyLogo.jpg" width="100" height="100" /></a></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        @if (!string.IsNullOrEmpty(adminName))
                        {
                            <td><h2>@adminName</h2></td>
                        }
                        else
                        {
                            <td><h2>AKHTRUL ISLAM</h2></td>
                        }
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="menu-box">
            <div class="container">
                <div class="navigation">
                    <ul class="sf-menu clsMenuBackGround" id="menu">
                        <li><a href="/Home/Index">Home</a></li>
                        <li>
                            <a href="javascript:void(0)">Send Query</a>
                            <ul>
                                <li><a href="/Home/SendQuery">Send Query</a></li>
                                <li><a href="/Home/GuestQueryResponse">View Response of Query</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Home/DevelopmentWork">Development Work</a>
                        </li>
                        <li>
                            <a href="/Home/GetFrontVideo">Video</a>
                        </li>
                        <li>
                            <a href="/Home/VotingSurvey">Voting Survey</a>

                        </li>
                        <li><a href="/Home/Contact">Contact</a></li>

                    </ul>
                </div>
            </div>
        </div>

    </header>
    <section>
        @RenderBody()
    </section>
    <footer>
        <div class="footer-top-bg" style="height:52px;">
            <div class="container">
                <div class="footer-navbox" style="float:left;">
                    <h5 class="light-grey1">Twitter</h5>
                    <div class="footer-nav">
                        <ul>
                            <li><a href="https://twitter.com/" title="twitter link" target="_blank"><img src="~/images/Twitter.png" width="50" height="50" alt="Image not found" /></a></li>
                        </ul>
                    </div>
                </div>
                <div class="footer-navbox" style="float:right;">
                    <h5 class="light-grey1">Facebook</h5>
                    <div class="footer-nav">
                        <ul>
                            <li><a href="https://www.facebook.com/" title="facebook link" target="_blank"><img src="~/images/Facebook.png" width="50" height="50" alt="Image not found" /></a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bot-bg">
            <div class="container">
                <div class="footer-cont">
                    ©copyright 2019,  All right reserved.
                    
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
