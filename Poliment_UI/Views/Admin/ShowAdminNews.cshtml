    ViewBag.Title = "ShowAdminNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/Common.css" rel="stylesheet" />
<style type="text/css">
    .clsSetHeaderDesc {
        margin-top: 35px;
        margin-left: 195px;
    }
</style>
<h2 class="clsSetHeaderDesc">Show Admin News</h2>
<br />
<div>
    <fieldset>
        <legend><b>Show News</b></legend>

        <table class="clsTableLeftMargin" cellspacing="10" cellpadding="10">

            <tr>
                <td><b> News Heading</b></td>
                <td>:</td>
                <td>@Model.NewsHeading</td>
            </tr>
            <tr>
                <td><b>News Description</b></td>
