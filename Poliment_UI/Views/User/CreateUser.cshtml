@model Poliment_UI.Models.CreateUserVM
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_UserMenuAfterLogin.cshtml";
}

@Scripts.Render("~/bundles/jqueryUI")
@Styles.Render("~/bundles/jqueryUIcss")

<script src="~/Content/js/CreateUser.js"></script>
<link href="~/Content/css/CreateUser.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        MainFunctionCall();
        $("#DOB").datepicker({
            dateFormat: "dd/M/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-80:+0"
        });
        $("#Mobile").keydown(function (e) {
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110]) !== -1 ||
                   (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                   (e.keyCode >= 35 && e.keyCode <= 40)) {

                return;
            }
            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });

    });
</script>

<div id="divMain">
    <h2 style="margin-left:192px;">Create User</h2>
    <fieldset>
        <legend>Create User</legend>
        <div style="margin-left:290px;">
            @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
            {
                <span id="spnErrorMessage" class="errorMessage" style="margin-left:180px;"></span>

                <table width="100%" border="0" cellspacing="7" cellpadding="0">
                    <tbody>

                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Select Block :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.DropDownListFor(x => x.BlockName, new SelectList(Model.BlockML, "Id", "BlockName"), new { @class = "reg-frm-inp IncreaseTextWidth" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Select Area :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.DropDownListFor(x => x.AreaName, new SelectList(Model.AreaML, "Id", "AreaName"), new { @class = "clsddlArea reg-frm-inp IncreaseTextWidth" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>First Name :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.FirstName, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "60" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Last Name :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.LastName, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "60" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>User Name :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.UserName, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "60" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Password :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.Password, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "60" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Mobile :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.Mobile, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "10" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Email :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.Email, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "60" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Gender :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                <span>Male:</span> @Html.RadioButtonFor(x => x.Gender, "Male", new { @checked = "checked" })
                                <span>Female:</span>  @Html.RadioButtonFor(x => x.Gender, "Female", new { })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                <span>*</span>Date of birth :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.DOB, "", new { @class = "reg-frm-inp IncreaseTextWidth" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                Designation :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.Designation, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "150" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                Political Party :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.TextBoxFor(x => x.PoliticalParty, "", new { @class = "reg-frm-inp IncreaseTextWidth", @maxlength = "150" })
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text">
                                Image :
                            </td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                <input type="file" id="CreateUserFile" />
                            </td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text"></td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td width="144" align="right" class="frm-text"></td>
                            <td width="10">
                                &nbsp;
                            </td>
                            <td>
                                @Html.HiddenFor(x => x.Id)
                                <input type="hidden" id="hdnUserName" value="@Model.UserName" />
                                <input type="hidden" id="hdnMobile" value="@Model.Mobile" />
                                <input type="hidden" id="hdnEmail" value="@Model.Email" />
                                <input type="button" id="btnSave" class="createbutton" value="Save" />
                                <a href="/User/Dashboard" class="cancelbutton">Cancel</a>
                            </td>
                        </tr>

                    </tbody>
                </table>
            }
        </div>
    </fieldset>
</div>


