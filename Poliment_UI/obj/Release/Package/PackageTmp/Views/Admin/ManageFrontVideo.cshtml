@model Poliment_UI.Models.ManageUserInterfaceVM
@{
    ViewBag.Title = "ManageFrontVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

        $('#btnSaveVideo').click(function () {
            var videoDescription = $("#videoDescription").val();
            if (videoDescription == undefined || videoDescription == null || videoDescription == "") {
                alert("Please enter video description");
                return false;
            }
            var postedFile = $("#postedFile").val();
            if (postedFile == undefined || postedFile == null || postedFile == "") {
                alert("Please select video");
                return false;
            }

        });

        $('.clsDeleteVideo').click(function () {
            var result = confirm("Are you sure want to delete this video");
            if (result == false) {
                return false;
            }
        });

        $("#videoForm").submit(function (e) {
            $("#myLoadingElement").show();
        });
    });

</script>
<link href="~/Content/css/Common.css" rel="stylesheet" />
<style type="text/css">
    .webgrid {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 1.2em;
        width: 100%;
        height: 270px;
        display: table;
        border-collapse: separate;
        border: solid 1px #98BF21;
        background-color: white;
    }

    .webgrid-table td, th {
        border: 1px solid #98BF21;
        padding: 3px 7px 2px;
    }

    .webgrid-header {
        background-color: #A7C942;
        color: #FFFFFF;
        padding-bottom: 4px;
        padding-top: 5px;
        text-align: left;
    }

    .webgrid-footer {
    }

    .webgrid-row-style {
        padding: 3px 7px 2px;
    }

    .webgrid-alternating-row {
        background-color: #EAF2D3;
        padding: 3px 7px 2px;
    }
    .clsSetHeaderDesc{
    margin-top: 35px;
    margin-left: 195px;
    }
</style>
<h2 class="clsSetHeaderDesc">Manage Front Video</h2>
<div>
    @{
        if (ViewBag.ResultSuccess != null)
        {
    <script type="text/javascript">
        alert("Video uploaded successfully");
    </script>
        }

    }

    @{
        if (ViewBag.FrontVideoDeleted != null)
        {
    <script type="text/javascript">
        alert("Video deleted successfully");
    </script>
        }

    }

</div>
<fieldset>
    <legend>Manage Front Image</legend>
    @using (Html.BeginForm("ManageFrontVideo", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "videoForm" }))
    {
        @Html.AntiForgeryToken()
        <table class="clsTableLeftMargin" cellspacing="10" cellpadding="10">

            <tr>
                <td>Video Description<span class="clsSpanRed">*</span></td>
                <td>:</td>
                <td><textarea id="videoDescription" name="videoDescription" maxlength="500"></textarea></td>
            </tr>
            <tr>
                <td>Select Video<span class="clsSpanRed">*</span></td>
                <td>:</td>
                <td><input type="file" id="postedFile" name="postedFile" /></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                    <input type="submit" id="btnSaveVideo" class="createbutton" value="Save" />
                    <a href="/Admin/Dashboard" class="cancelbutton">Cancel</a>
                </td>
            </tr>
        </table>
    }
</fieldset>
<br />
<div>
    <a href="/Admin/GetAllFrontVideo" style="margin-left:192px;" class="cancelbutton">Get All Video</a>
    <br />
    <div>
        @if (Model.FrontEndVideoML != null && Model.FrontEndVideoML.Count > 0)
        {

            WebGrid grid = new WebGrid(rowsPerPage: Model.PageSize);
            grid.Bind(Model.FrontEndVideoML,
            autoSortAndPage: false,
            rowCount: Model.TotalRows);

        @grid.GetHtml(
 fillEmptyRows: false,
 tableStyle: "webgrid",
 alternatingRowStyle: "webgrid-alternating-row",
 headerStyle: "webgrid-header",
 footerStyle: "webgrid-footer",
 mode: WebGridPagerModes.All,
 firstText: "<< First",
 previousText: "< Prev",
 nextText: "Next >",
 lastText: "Last >>",
 columns: new[] {
 grid.Column("Id",header: "Id", canSort: false),
 grid.Column("VideoDescription",header: "Video Description",canSort: false),
 grid.Column("VideoName",header: "Video Name",canSort: false),
 grid.Column("DisplayCreatedDate",header: "Upload Date(DD-MM-YYYY)",canSort: false),
 grid.Column("VideoLength",header: "Video Length(MB)",canSort: false),
 grid.Column(header: "Is Active",canSort: false,format:@<text>@(item.IsActive ? "Yes" : "No")</text>),
 grid.Column(header: "Show Video", format:@<text>  @Html.ActionLink("Show Video", "ShowFrontVideo",new { id = item.Id } , new {target="_blank"})</text>),
 grid.Column(header: "Delete", format:@<text>  @Html.ActionLink("Delete", "DeleteFrontVideo",new { id = item.Id },new {target="_blank",@class="clsDeleteVideo" })</text>)

    })
        }
        else
        {
            if (Model.FrontEndVideoML != null && Model.FrontEndVideoML.Count == 0)
            {
                <h2><span style="margin-left:192px;">No record found</span></h2>
            }
        }
    </div>

</div>
<div id="myLoadingElement" style="display: none;margin-left:500px;">
    <img src="~/images/WaitingLoader.gif" alt="Loading..." />
</div>