@model Poliment_UI.Models.ManageUserInterfaceVM
@{
    ViewBag.Title = "ManageNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {

        $('#btnSaveNews').click(function () {
            var newsHeading = $("#newsHeading").val();
            if (newsHeading == undefined || newsHeading == null || newsHeading == "") {
                alert("Please enter news heading");
                $("#newsHeading").focus();
                return false;
            }
            var newsDescription = $("#newsDescription").val();
            if (newsDescription == undefined || newsDescription == null || newsDescription == "") {
                alert("Please enter news description");
                $("#newsDescription").focus();
                return false;
            }

            var sdata = {};
            sdata.newsHeadingValue = newsHeading;
            sdata.newsDescriptionValue = newsDescription;
            $.ajax({
                url: '/Admin/ManageNews',
                type: "POST",
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(sdata),
                success: function (myresult) {
                    if (myresult == "error") {
                        alert("An error occured");
                    }
                    else {
                        $("#newsHeading").val('');
                        $("#newsDescription").val('');
                        alert("News saved successfully");
                      
                    }

                },
                error: function () {
                    alert("An error occured");
                }
            });


        });

        $('.clsDeleteNews').click(function () {
                var result = confirm("Are you sure want to delete this news");
                if (result == false) {
                    return false;
                }
            });

    });

</script>
<link href="~/Content/css/Common.css" rel="stylesheet" />
<style type="text/css">
