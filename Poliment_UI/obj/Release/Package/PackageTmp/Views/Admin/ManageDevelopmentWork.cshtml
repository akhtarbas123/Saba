@model Poliment_UI.Models.ManageUserInterfaceVM
@{
    ViewBag.Title = "ManageDevelopmentWork";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

        $('#btnSaveDevWork').click(function () {
            var devHeading = $("#devHeading").val();
            if (devHeading == undefined || devHeading == null || devHeading == "") {
                alert("Please enter development work heading");
                $("#devHeading").focus();
                return false;
            }
            var devDescription = $("#devDescription").val();
            if (devDescription == undefined || devDescription == null || devDescription == "") {
                alert("Please enter development work description");
                $("#devDescription").focus();
                return false;
            }

            var sdata = {};
            sdata.developmentHeadingValue = devHeading;
            sdata.developmentDescriptionValue = devDescription;
            $.ajax({
                url: '/Admin/ManageDevelopmentWork',
                type: "POST",
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(sdata),
                success: function (myresult) {
                    if (myresult == "error") {
                        alert("An error occured");
                    }
                    else {
                        $("#devHeading").val('');
                        $("#devDescription").val('');
                        alert("Development work saved successfully");

                    }

                },
                error: function () {
                    alert("An error occured");
                }
            });


        });

        $('.clsDeleteWork').click(function () {
                var result = confirm("Are you sure want to delete this work");
                if (result == false) {
                    return false;
                }
            });

    });

</script>
<link href="~/Content/css/Common.css" rel="stylesheet" />
<style type="text/css">
