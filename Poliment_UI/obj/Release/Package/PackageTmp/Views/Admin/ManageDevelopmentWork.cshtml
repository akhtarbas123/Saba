    }
</style>
@{
    if (ViewBag.DevWorkDeleted != null)
    {
        <script type="text/javascript">
        alert("Development work deleted successfully");
        </script>
    }

}
<h2 class="clsSetHeaderDesc">Manage Development Work</h2>

<div>
    <fieldset>
        <legend><b>Development Work</b></legend>

        <table class="clsTableLeftMargin" cellspacing="10" cellpadding="10">

            <tr>
                <td>Development Heading<span class="clsSpanRed">*</span></td>
                <td>:</td>
                <td><input type="text" id="devHeading" maxlength="500" name="devHeading" class="reg-frm-inp IncreaseTextWidth" /></td>
            </tr>
            <tr>
                <td>Development Description<span class="clsSpanRed">*</span></td>
                <td>:</td>
                <td><textarea id="devDescription" name="devDescription" class="reg-frm-inp IncreaseTextWidth"></textarea></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                    <input type="submit" id="btnSaveDevWork" class="createbutton" value="Save" />
                    <a href="/Admin/Dashboard" class="cancelbutton">Cancel</a>
                </td>
            </tr>
        </table>

    </fieldset>
</div>
<br />
<div>
    <a href="/Admin/GetAllDevelopmentWork" style="margin-left:192px;" class="cancelbutton">Get All Development Work</a>
    <br />
    <div>
        @if (Model.AdminDevelopmentWorkML != null && Model.AdminDevelopmentWorkML.Count > 0)
        {

            WebGrid grid = new WebGrid(rowsPerPage: Model.PageSize);
            grid.Bind(Model.AdminDevelopmentWorkML,
            autoSortAndPage: false,
            rowCount: Model.TotalRows);

            @grid.GetHtml(
 fillEmptyRows: false,
 tableStyle: "webgrid",
 alternatingRowStyle: "webgrid-alternating-row",
 headerStyle: "webgrid-header",
 footerStyle: "webgrid-footer",
 mode: WebGridPagerModes.All,
 firstText: "<< First",
 previousText: "< Prev",
 nextText: "Next >",
 lastText: "Last >>",
 columns: new[] {
 grid.Column("Id",header: "Id", canSort: false),
 grid.Column("DevelopmentHeading",header: "Development Work Heading",canSort: false),
 grid.Column("DisplayCreatedDate",header: "Upload Date(DD-MM-YYYY)",canSort: false),
 grid.Column(header: "Is Active",canSort: false,format:@<text>@(item.IsActive ? "Yes" : "No")</text>),
 grid.Column(header: "Show Development Work", format:@<text>  @Html.ActionLink("Show Work", "ShowDevelopmentWork",new { id = item.Id } , new {target="_blank"})</text>),
 grid.Column(header: "Delete", format:@<text>  @Html.ActionLink("Delete", "DeleteDevelopmentWork",new { id = item.Id },new {target="_blank",@class="clsDeleteWork" })</text>)

    })
        }
        else
        {
            if (Model.AdminDevelopmentWorkML != null && Model.AdminDevelopmentWorkML.Count == 0)
            {
                <h2><span style="margin-left:192px;">No record found</span></h2>
            }
        }
    </div>


</div>