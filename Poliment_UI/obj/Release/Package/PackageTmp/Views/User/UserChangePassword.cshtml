
@{
    ViewBag.Title = "UserChangePassword";
    Layout = "~/Views/Shared/_UserMenuAfterLogin.cshtml";
}
<link href="~/Content/css/Common.css" rel="stylesheet" />
<style>
    .IncreaseTextWidth {
        width: 470px;
    }

    .clsSpanRed {
        color: #F00;
    }
     .clsSetHeaderDesc{
    margin-top: 35px;
    margin-left: 195px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {

        $('#btnResetPassword').click(function () {

            var passWord = $("#passWord").val();
            if (passWord == undefined || passWord == null || passWord == "") {
                alert("Please enter password");
                $("#passWord").focus();
                return false;
            }
            var confirmPassword = $("#confirmPassword").val();
            if (confirmPassword == undefined || confirmPassword == null || confirmPassword == "") {
                alert("Please enter confirm password");
                $("#confirmPassword").focus();
                return false;
            }

            if (passWord != confirmPassword) {
                alert("Password and confirm password should be same");
                $("#passWord").focus();
                return false;
            }


        });
    });
</script>
<h2 class="clsSetHeaderDesc">User Change Password</h2>
<br />
<div>
    @{
        if (ViewBag.UserPasswordChangedSuccessfully != null)
        {
            <script type="text/javascript">
                alert("Your account password changed successfully.");               

            </script>
        }

    }
    @{
        if (ViewBag.UserPasswordChangedError != null)
        {
            <script type="text/javascript">
                    alert("An error occured while changing your password.Please try again to change your password");
            </script>
        }

    }
</div>
<div id="dvChangePassword">

    @using (Html.BeginForm("UserChangePassword", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>
                <b>Change Password</b>
            </legend>

            <table class="clsTableLeftMargin" cellspacing="15" cellpadding="0">
                <tr>
                    <td>Enter password<span class="clsSpanRed">*</span></td>
                    <td>:</td>
                    <td><input type="password" id="passWord" name="passWord" maxlength="60" class="reg-frm-inp IncreaseTextWidth" /></td>

                </tr>
                <tr>
                    <td>Confirm password<span class="clsSpanRed">*</span></td>
                    <td>:</td>
                    <td><input type="password" id="confirmPassword" name="confirmPassword" maxlength="60" class="reg-frm-inp IncreaseTextWidth" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        <input type="submit" id="btnResetPassword" class="createbutton" value="Change Password" />
                        <a href="/User/Dashboard" id="btnResetCancel" class="cancelbutton">Cancel</a>
                    </td>
                </tr>
            </table>

        </fieldset>
    }

</div>

