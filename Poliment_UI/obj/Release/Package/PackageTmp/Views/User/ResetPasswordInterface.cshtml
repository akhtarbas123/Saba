
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change User Password</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/css/Common.css" rel="stylesheet" />
    <style>
        .IncreaseTextWidth {
            width: 470px;
        }

        .clsSpanRed {
            color: #F00;
        }
    </style>
    <script type="text/javascript">
    $(document).ready(function () {

        $('#btnResetPassword').click(function () {

            var passWord = $("#passWord").val();
            if (passWord == undefined || passWord == null || passWord == "") {
                alert("Please enter password");
                $("#passWord").focus();
                return false;
            }
            var confirmPassword = $("#confirmPassword").val();
            if (confirmPassword == undefined || confirmPassword == null || confirmPassword == "") {
                alert("Please enter confirm password");
                $("#confirmPassword").focus();
                return false;
            }

            if (passWord != confirmPassword) {
                alert("Password and confirm password should be same");
                $("#passWord").focus();
                return false;
            }


        });
    });
    </script>

</head>
<body>
    <h2>Change Password</h2>
    <br />
    <div id="dvChangePassword">

        @using (Html.BeginForm("ResetPasswordInterface", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <legend>
                    <b>Change Password</b>
                </legend>

                <table class="clsTableLeftMargin" cellspacing="15" cellpadding="0">
                    <tr>
                        <td>Enter password<span class="clsSpanRed">*</span></td>
                        <td>:</td>
                        <td><input type="password" id="passWord" name="passWord" maxlength="60" class="reg-frm-inp IncreaseTextWidth" /></td>

                    </tr>
                    <tr>
                        <td>Confirm password<span class="clsSpanRed">*</span></td>
                        <td>:</td>
                        <td><input type="password" id="confirmPassword" name="confirmPassword" maxlength="60" class="reg-frm-inp IncreaseTextWidth" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="hidden" id="hdnAdminId" name="hdnAdminId" value="@ViewBag.adminId " /></td>
                        <td>
                            <input type="submit" id="btnResetPassword" class="createbutton" value="Change Password" />
                            <a href="/Admin/Index" id="btnResetCancel" class="cancelbutton">Cancel</a>
                        </td>
                    </tr>
                </table>

            </fieldset>
        }

    </div>
</body>
</html>
